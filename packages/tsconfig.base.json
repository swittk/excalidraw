{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "paths": {
      "ex-excalidraw-common": ["./common/src/index.ts"],
      "ex-excalidraw-common/*": ["./common/src/*"],
      "ex-excalidraw-element": ["./element/src/index.ts"],
      "ex-excalidraw-element/*": ["./element/src/*"],
      "ex-excalidraw": ["./excalidraw/index.tsx"],
      "ex-excalidraw/*": ["./excalidraw/*"],
      "ex-excalidraw-math": ["./math/src/index.ts"],
      "ex-excalidraw-math/*": ["./math/src/*"],
      "ex-excalidraw-utils": ["./utils/src/index.ts"],
      "ex-excalidraw-utils/*": ["./utils/src/*"]
    }
  }
}
